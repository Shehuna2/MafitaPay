# ==============================================================================
# MafitaPay Environment Variables - Example Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real credentials to version control
# ==============================================================================

# --------------------------------------------------
# Django Core Settings
# --------------------------------------------------
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-secure-one
DJANGO_DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# --------------------------------------------------
# Database Configuration
# --------------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/database

# --------------------------------------------------
# Email Configuration (Brevo SMTP)
# --------------------------------------------------
# IMPORTANT: Brevo SMTP credentials are NOT your regular email address
# Get these from: https://app.brevo.com/settings/keys/smtp
#
# EMAIL_HOST_USER format: xxxxx@smtp-brevo.com (e.g., 9f311a001@smtp-brevo.com)
# ❌ WRONG: shehuusman1414@gmail.com (This is NOT a valid Brevo SMTP username)
# ✅ CORRECT: 9f311a001@smtp-brevo.com (From Brevo dashboard)
#
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-brevo-smtp-username@smtp-brevo.com
EMAIL_HOST_PASSWORD=your-brevo-smtp-key-here
DEFAULT_FROM_EMAIL=MafitaPay <no-reply@mafitapay.com>

# --------------------------------------------------
# URLs Configuration
# --------------------------------------------------
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourfrontend.com
BACKEND_URL=https://yourbackend.com

# --------------------------------------------------
# CORS Settings
# --------------------------------------------------
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com

# --------------------------------------------------
# Cloudinary (Media Storage)
# --------------------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# --------------------------------------------------
# Cryptocurrency Exchange API Keys
# --------------------------------------------------
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# --------------------------------------------------
# Blockchain RPC URLs
# --------------------------------------------------
TON_API_URL=https://toncenter.com/api/v2
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARB_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org
OP_RPC_URL=https://mainnet.optimism.io
AVAX_RPC_URL=https://api.avax.network/ext/bc/C/rpc
POL_RPC_URL=https://polygon-rpc.com
LINEA_RPC_URL=https://rpc.linea.build

# --------------------------------------------------
# Private Keys (Keep these SECURE!)
# --------------------------------------------------
ETH_PRIVATE_KEY=your-eth-private-key
BSC_SENDER_PRIVATE_KEY=your-bsc-private-key
ARB_PRIVATE_KEY=your-arb-private-key
BASE_PRIVATE_KEY=your-base-private-key
OP_PRIVATE_KEY=your-op-private-key
AVAX_PRIVATE_KEY=your-avax-private-key
POL_PRIVATE_KEY=your-pol-private-key
LINEA_PRIVATE_KEY=your-linea-private-key

# --------------------------------------------------
# Sender Addresses
# --------------------------------------------------
BSC_SENDER_ADDRESS=your-bsc-sender-address
ARB_SENDER_ADDRESS=your-arb-sender-address
BASE_SENDER_ADDRESS=your-base-sender-address
OP_SENDER_ADDRESS=your-op-sender-address
AVAX_SENDER_ADDRESS=your-avax-sender-address
POL_SENDER_ADDRESS=your-pol-sender-address
LINEA_SENDER_ADDRESS=your-linea-sender-address

# --------------------------------------------------
# Payment Gateway: Flutterwave
# --------------------------------------------------
FLW_API_VERSION=v4
FLW_LIVE_CLIENT_ID=your-live-client-id
FLW_LIVE_CLIENT_SECRET=your-live-client-secret
FLW_LIVE_ENCRYPTION_KEY=your-live-encryption-key
FLW_LIVE_HASH_SECRET=your-live-hash-secret
FLW_LIVE_BASE_URL=https://f4bexperience.flutterwave.com

# --------------------------------------------------
# Payment Gateway: Paystack
# --------------------------------------------------
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# --------------------------------------------------
# Payment Gateway: 9PSB
# --------------------------------------------------
NINE_PSB_CLIENT_ID=your-9psb-client-id
NINE_PSB_API_KEY=your-9psb-api-key
NINE_PSB_API_BASE_URL=https://api.9psb.com.ng/api/v1
NINE_PSB_WEBHOOK_SECRET=your-webhook-secret

# --------------------------------------------------
# Payment Gateway: PalmPay
# --------------------------------------------------
PALMPAY_MERCHANT_ID=your-merchant-id
PALMPAY_PUBLIC_KEY=your-public-key
PALMPAY_PRIVATE_KEY=your-private-key
PALMPAY_BASE_URL=https://api.palmpay.com

# --------------------------------------------------
# Bill Payment: VTU.ng
# --------------------------------------------------
VTU_BASE_URL=https://vtu.ng/wp-json
VTU_USERNAME=your-vtu-username
VTU_PASSWORD=your-vtu-password

# --------------------------------------------------
# Bill Payment: VTPass
# --------------------------------------------------
VTPASS_PUBLIC_KEY=your-public-key
VTPASS_API_KEY=your-api-key
VTPASS_SECRET_KEY=your-secret-key
VTPASS_LIVE_URL=https://vtpass.com/api

# --------------------------------------------------
# Render Specific (if deploying to Render)
# --------------------------------------------------
RENDER=true
